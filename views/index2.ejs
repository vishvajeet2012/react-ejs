<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Animated Text Display</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }
        .container {
            margin-top: 50px;
        }
        input[type="text"] {
            padding: 10px;
            font-size: 18px;
            width: 300px;
            border: 2px solid #ccc;
            border-radius: 4px;
            outline: none;
        }
        .display-text {
            margin-top: 20px;
            font-size: 24px;
            font-weight: bold;
            color: #333;
            white-space: nowrap;
            overflow: hidden;
            border-right: 3px solid black; /* Cursor effect */
            animation: blink-caret 0.75s step-end infinite;
        }
        @keyframes blink-caret {
            from, to { border-color: transparent; }
            50% { border-color: black; }
        }
        .typing-animation {
            display: inline-block;
            animation: typing 1s steps(10, end) 1 normal both;
        }
        @keyframes typing {
            from { width: 0; }
            to { width: 100%; }
        }
    </style>
</head>
<body>
    <div class="container">
        <input type="text" id="textInput" placeholder="Type something..." oninput="updateText()">
        <div class="display-text" id="displayText"></div>
    </div>

    <script>
        function updateText() {
            const input = document.getElementById('textInput').value;
            const display = document.getElementById('displayText');
            
            display.textContent = input;

            // Add typing animation if input is not empty
            if (input) {
                display.classList.add('typing-animation');
            } else {
                display.classList.remove('typing-animation');
            }
        }
    </script>
</body>
</html>
